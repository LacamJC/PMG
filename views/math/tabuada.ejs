<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabuada</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="shortcut icon" href="favicon.png" type="image/x-icon">

</head>
<body>
    <header>
        <h1>Tabuada</h1>
        <a href="/">home</a>
    </header>

    <div class="conteudo">

        <div class="mb-3 row w-100 m-auto">
            <div class="mb-3 col-12 col-md-6 text-center">
                <h2>Insira o valor </h2>
                <input type="text" name="" id="variavel" class="form-control mb-3 w-75 m-auto">
                <input type="button" value="Calcular" class="btn btn-primary mb-3" onclick="calc()">
            </div>
            <div class="col col-6 text-center m-auto">
                <ul id="res" class="m-auto text-center" style="list-style: none;"></ul>
            </div>
        </div>  
    </div>

    <script src="../js/tabuada.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function calc()
        {
            var txt_variavel = document.getElementById('variavel').value
            
            var variavel = Number(txt_variavel)
            document.getElementById('res').innerHTML = ""
            for(i=1;i<11;i++)
            {
                console.log(variavel * i)
                document.getElementById('res').innerHTML += `<li>${i} x ${variavel} = ${variavel*i}</li>`
            }
        }
    </script>
</body>
</html>